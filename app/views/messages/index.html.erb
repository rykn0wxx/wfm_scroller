<% title "All Messages", true, true %>

<div class="panel panel-default">
  <div class="panel-body">

    <% if @msgs.empty? %>
      <%= content_tag :div, "There's no messages" %>
    <% else %>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Content</th>
            <th>Published</th>
            <th>Valid To</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @msgs.each do |msg| %>
            <tr>
              <td><%= msg.name %></td>
              <td><%= msg.content %></td>
              <td><%= msg.published %></td>
              <td><%= msg.valid_to %></td>
              <td><%= link_to 'Show', msg %></td>
              <td><%= link_to 'Edit', edit_message_path(msg) %></td>
              <td><%= link_to 'Destroy', msg, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>

<%= link_to "New Message", new_message_path, :class => "btn btn-info btn-sm" %>
