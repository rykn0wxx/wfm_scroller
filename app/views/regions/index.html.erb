<% title "All Regions", true, true %>

<div class="panel panel-default">
  <div class="panel-body">

    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Code</th>
          <th>Is active</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @regions.each do |region| %>
          <tr>
            <td><%= region.name %></td>
            <td><%= region.code %></td>
            <td><%= region.is_active %></td>
            <td><%= link_to 'Show', region %></td>
            <td><%= link_to 'Edit', edit_region_path(region) %></td>
            <td><%= link_to 'Destroy', region, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>

<br>

<%= link_to "New Region", new_region_path, :class => "btn btn-info btn-sm" %>
